<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

      <h2>User info</h2>
      <%= render 'ulist', user: @user %>
      <div class="row">
       <%= link_to edit_user_path(current_user), class:"btn btn-outline-secondary btn-block edit_user_96628" do  %>
        <span><i class="fas fa-user-cog"></i></span>
       <% end %>
      </div>

      <h2 class="mt-3">New book</h2>
      <%= render 'nlist', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead class="__web-inspector-hide-shortcut__">
          <tr>
            <th></th>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
           <tr>
             <td>
               <%= link_to user_path(user) do %>
                <%= image_tag user.get_profile_image(100,100) %>
               <% end %>
             </td>
             <td>
               <%= user.name %>
             </td>
             <td>
               <%= link_to 'show', user_path(user.id) %>
             </td>
           </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>