<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      
      <%= image_tag 'no_image', size: "100x100" %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to "編集", edit_user_path(@user) %>
      </div>


      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book do |f| %>
          <label>Title</label>
          <%= f.text_field :title %>
          <label>Opinion</label>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book' %>
      <% end %>


    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead class="__web-inspector-hide-shortcut__">
          <tr>
            <th></th>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
           <tr>
             <td>
               <%= image_tag 'no_image', size: "100x100" %>
             </td>
             <td>
               <%= user.name %>
             </td>
             <td>
               <%= link_to 'show', user_path(user.id) %>
             </td>
           </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>