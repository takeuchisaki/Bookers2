<div>
  <% if @book.errors.any? %>
   <%= @book.errors.count %>errors prohibited this obj from being saved:
    <ul>
      <%= @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      
      <h2>User info</h2>
      <%= render 'ulist', user: @user %>
      <div class="row">
       <%= link_to edit_user_path(current_user), class:"btn btn-outline-secondary btn-block edit_user_96628" do  %>
        <span><i class="fas fa-user-cog"></i></span>
       <% end %>
      </div>
      
      <h2 class="mt-3">New book</h2>
      <%= render 'nlist', book: @book %>
      </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead class="__web-inspector-hide-shortcut__">
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <%= render 'elist', books: @books, user: @user %>
        </tbody>
      </table>
    </div>
  </div>
</div>
