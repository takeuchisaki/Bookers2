
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render 'ulist', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'nlist', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead class="__web-inspector-hide-shortcut__">
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <%= render 'elist', books: @books %>
        </tbody>
      </table>
    </div>
  </div>
</div>
