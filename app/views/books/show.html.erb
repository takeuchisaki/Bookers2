
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

      <h2>User info</h2>
      <%= render 'users/ulist', user: @user %>
      <div class="row">
       <%= link_to edit_user_path(@book.user), class:"btn btn-outline-secondary btn-block edit_user_96628" do  %>
         <span><i class="fas fa-user-cog"></i></span>
       <% end %>
      </div>

      <h2 class="mt-3">New book</h2>
      <%= render 'users/nlist', book: @bookw %>
    </div>


    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
           <tr>
             <td>
               <%= link_to user_path(@user) do %>
                <%= image_tag @user.get_profile_image(100,100) %><br>
                <%= @user.name %>
               <% end %>
             </td>
             <td>
               <%= link_to @book.title, book_path(@book.id) %>
             </td>
             <td>
               <%= @book.body %>
             </td>
             <td>
               <% if @book.user == current_user %>
                <%= link_to 'Edit', edit_book_path(@book), class:"btn btn-sm btn-success edit_book_73452" %>
               <% end %>
             </td>
             <td>
               <% if @book.user == current_user %>
                <%= link_to 'Destroy', book_path(@book), method: :delete,"data-confirm" => "本当に削除しますか？", class:"btn btn-sm btn-danger destroy_book_73452" %>
               <% end %>
             </td>
           </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

